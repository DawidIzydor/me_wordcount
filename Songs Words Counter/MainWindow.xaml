<Window x:Class="Songs_Words_Counter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Songs_Words_Counter"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="800">
	<Grid Margin="10,0,-0.667,-0.333">
		<Grid.RowDefinitions>
			<RowDefinition Height="70*"/>
			<RowDefinition Height="37*"/>
		</Grid.RowDefinitions>
		<RichTextBox x:Name="WebsitesInputText" HorizontalAlignment="Left" Height="254" VerticalAlignment="Top" Width="429" Grid.RowSpan="2" Margin="10,10,0,0">
			<FlowDocument/>
		</RichTextBox>
		<Button x:Name="CalculateBtn" Content="Calculate" HorizontalAlignment="Left" Height="42" Margin="10,59,0,0" VerticalAlignment="Top" Width="316" Click="CalculateBtn_Click" Grid.Row="1"/>
		<TextBlock x:Name="OutputTextBlock" HorizontalAlignment="Left" Margin="444,10,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="301" Width="330" Grid.RowSpan="2"/>
		<CheckBox x:Name="NoNumbersCheckBox" Content="No numbers" HorizontalAlignment="Left" Margin="331,59,0,0" Grid.Row="1" VerticalAlignment="Top" Height="42" Width="108"/>
	</Grid>
</Window>
